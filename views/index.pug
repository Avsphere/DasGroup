extends layout

block content
  .wrapper
    h1#user(data-userId= user._id style="display:none;") #{user.username}
    .headband
      include logo.pug
      .group_heading
        h2 Courses
      h5(style="padding-top: 15px;") #{user.username}  
    .container.vest
      br
      .row
        .col-4
          table.table.table-striped.table_main(style="width:480px;")
            thead
              tr
                th.center Course
                th.center # People
                th.center # Assignments
                th.center Role
            tbody
              each group in adminOf
                tr
                  td
                    a.link(href=resourceBasePath + 'admin/' + group.key) #{group.name}
                  td #{group.members.length}
                  td #{group.folios.length}
                  td Instructor
              each group in memberOf
                if !adminOf.includes(group)  
                  tr
                    td
                      a.link(href=resourceBasePath + 'group/' + group.key) #{group.name}
                    td #{group.members.length}
                    td #{group.folios.length}
                    td Member

      br
      #formArea
      br
      .row
        .col-5
          button#createNewGroup.btn.btn-outline-primary(type='button' style="float: right;") Add Course
