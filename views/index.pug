extends layout

block content
  .wrapper
    h1#user(data-userId= user._id) #{user.username} Welcome to DasGroup
    .title
    .groupListWrapper
      .row
        .col
          h1 Member of
        .col
          button#createNewGroup.btn.btn-primary(type='button') Create New Group #{resourceBasePath}
      br
      br
      #formArea
      br
      h2 Member of
      .groupList
        ul.list-group
          each group in memberOf
            li.list-group-item 
              a(href=resourceBasePath + 'group/' + group.key) #{group.name}
      br
      h2 Admin of
      .groupList
        ul.list-group
          each group in adminOf
            li.list-group-item 
              a(href=resourceBasePath + 'admin/' + group.key) #{group.name}
